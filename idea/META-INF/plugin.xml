<!DOCTYPE idea-plugin PUBLIC "Plugin/DTD" "http://plugins.intellij.net/plugin.dtd">
<idea-plugin version="2">
  <name>Osgi Plugin</name>
  <description>This plugin simplifies OSGi development.</description>
  <version>1.0</version>
  <vendor>OPS4J - Open Participation Software for Java</vendor>
  <idea-version since-build="3000"/>
  <resource-bundle xmlns="">org.ops4j.pax.runner.idea.OsgiResourceBundle</resource-bundle>

  <application-components>
    <component>
    <implementation-class>org.ops4j.pax.runner.idea.OsgiPlugin</implementation-class>
    </component>
    <component>
      <implementation-class>org.ops4j.pax.runner.idea.PaxRunnerType</implementation-class>
    </component>
    <component>
      <implementation-class>org.ops4j.pax.runner.idea.editor.RepositoryNodeFactory</implementation-class>
    </component>
  </application-components>
</idea-plugin>